<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- namespace必须指向dao接口 -->
<mapper namespace="com.cheer.mini.ums.dao.OrderDao">
	
	<sql id="common_fields">
		 id,amount,title,remark,status
	</sql>
	
	<resultMap id="orderInfoResult" type="com.cheer.mini.ums.model.Order">
		<result column="id" property="id" jdbcType="VARCHAR" />
		<result column="amount" property="amount" jdbcType="DECIMAL" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="remark" property="remark" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="VARCHAR" />
		<collection property="items" javaType="java.util.ArrayList" 
			ofType="com.cheer.mini.ums.model.OrderItem">
			<result column="item_id" property="id" jdbcType="VARCHAR" />
			<result column="item_order_id" property="orderId" jdbcType="VARCHAR" />
			<result column="item_number" property="number" jdbcType="INTEGER" />
			<result column="item_price" property="price" jdbcType="DECIMAL" />
			<result column="item_product_name" property="productName" 
				jdbcType="VARCHAR" />
		</collection>
	</resultMap>
	
	<select id="getOrderInfo" resultMap="orderInfoResult">
		SELECT 
			a.id,
			a.amount,
			a.title,
			a.remark,
			a.status,
			b.id item_id,
			b.order_id item_order_id,
			b.number item_number,
			b.price item_price,
			b.product_name item_product_name
		FROM ums_order a,ums_order_item b 
		WHERE a.id = b.order_id
		AND a.id = #{0,jdbcType=VARCHAR}
	</select>
	
	<insert id="save" parameterType="Order">
		INSERT INTO ums_order
		(
		id,
		amount,
		title,
		remark,
		status,
		date_create,
		date_update,
		creator_fk,
		updater_fk,
		is_valid
		)
		VALUES
		(
		#{id},
		#{amount},
		#{title},
		#{remark},
		#{status},
		#{dateCreate},
		#{dateUpdate},
		#{creatorFk},
		#{updaterFk},
		#{isValid}
		)
	</insert>
	
	<update id="update" parameterType="Order">
		UPDATE ums_order SET
			<if test="amount!=null and amount!=''">
				amount = #{amount}
			</if>
			<if test="title!=null and title!=''">
				,title = #{title}
			</if>
			<if test="remark!=null and remark!=''">
				,remark = #{remark}
			</if>
			<if test="status != -1">
				,status = #{status}
			</if>
			WHERE ID=#{id}
	</update>
	
	<delete id="delete">
		DELETE FROM ums_order where id=#{0,jdbcType=VARCHAR}
	</delete>
	
	<select id="list" parameterType="Order" resultType="Order">
		SELECT 
			<include refid="common_fields" />
		FROM
			ums_order
		<where>
			1=1
			<if test="status != -1">
				and status = #{status}
			</if>
			<if test="title!=null and title!=''">
				and title like CONCAT(#{title},'%')
			</if>
		</where>
	</select>
	
</mapper>